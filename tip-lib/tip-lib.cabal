name:                tip-lib
version:             0.1
synopsis:            tens of inductive problems - support library
-- description:
homepage:            https://github.com/danr/tip
license:             BSD3
license-file:        LICENSE
author:              Dan RosÃ©n
maintainer:          danr@chalmers.se
category:            Theorem Provers
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:
    Tip
    Tip.AddCase
    Tip.AxiomatizeFuncdefs
    Tip.CommuteMatch
    Tip.Denewtype
    Tip.Lift
    Tip.Types
    Tip.EqualFunctions
    Tip.Fresh
    Tip.Utils
    Tip.Utils.Renamer
    Tip.Delambda
    Tip.WorkerWrapper
    Tip.Simplify
    Tip.Pretty
    Tip.Pretty.SMT

    Tip.Parser
    Tip.Parser.ErrM
    Tip.Parser.AbsTIP
    Tip.Parser.LexTIP
    Tip.Parser.ParTIP
    Tip.Parser.Convert

  hs-source-dirs:      src
  include-dirs:        src
  ghc-options:         -Wall
  default-language:    Haskell2010
  build-depends:       base >=4 && <5,
                       geniplate >=0.6.0.6,
                       containers,
                       mtl,
                       pretty,
                       array

executable tip-parser
  main-is:             executable/Main.hs
  default-language:    Haskell2010
  build-depends:       base,
                       tip-lib,
                       pretty-show,
                       pretty
